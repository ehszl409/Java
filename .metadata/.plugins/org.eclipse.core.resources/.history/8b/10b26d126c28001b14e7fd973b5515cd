package ch04;

class TV {
	int size;
	String mf;

	public TV() {
		this("LG");
	}

	public TV(String mf) {
		size = 32;
		this.mf = mf;
		System.out.println(size + "inch " + mf);
	}

	public TV(int size, String mf) {
		this.size = size;
		this.mf = mf;
		System.out.println(size + "inch " + mf);
	}
}

public class TVApp {

	public static void main(String[] args) {
//		new TV();
//		new TV("Samsung");
//		new TV(65, "Samsung");
		
	}

}
