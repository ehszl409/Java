package ch03;

public class For03 {

	public static void main(String[] args) {
		// TODO Auto-generated meSthod stub
		String s = "*";
		
		for (int i = 0; i < 5; i++) {
			for (int j = 0; j < i+1; j++) {
				System.out.print(s);
			}
			System.out.println();
		}
		
		for (int i = 1; i < 5; i++) {
			for (int j = 0; j < 5-i; j++) {
				System.out.println(s);
			}
		}
	}

}
