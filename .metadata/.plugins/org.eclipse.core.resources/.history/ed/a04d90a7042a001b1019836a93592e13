package ch03;

import java.util.Scanner;

public class While01 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		
		// 데몬 (Daemon Process)
		while(true) {
			int num = sc.nextInt();
			System.out.println("받은 값 : "+num);
			if(num < 0) {
				break;
			}
		}

	}

}
