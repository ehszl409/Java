package ex01;

public class Ex05 {

	public static void main(String[] args) {
		String str[] = { "가위", "바위", "보" };
		String user = "가위";
		
		Scanner user1 = new Scanner(System.in);
		int n = (int) (Math.random() * 3);
		if (str[n] == user)
			System.out.println("비겼습니다.");
		else {
			if (str[n].equals("가위") && user.equals("바위")) {
				System.out.println("user win");
			}
		}

	}

}
