package ex01;

class Rectangle {
	private int x;
	private int y;
	private int width;
	private int height;
	
	public Rectangle() {
		// TODO Auto-generated constructor stub
	}

	Rectangle(int x, int y, int width, int height) {	
		this.x = x;
		this.y = y;
		this.width = width;
		this.height = height;
	}
	
	int square() {
		return this.width * this.height;
	}
	
	void show() {
		System.out.println("("+this.x+","+this.y+")"+"에서 크기가 "+this.width+"x"+this.height+"인 사각형");
	}
	
	boolean contains(Rectangle r) {
		if( (r.x < this.x && r.y < this.y) && (r.square() < this.square()) ) {
			return true;
		}
		else return false;
	}
	
	

}
